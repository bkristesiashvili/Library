@{
    ViewBag.Title = "რედაქტირება";
}

<div class="container">
    <div class="row form w-75">
        <div class="col-12">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active text-13px" data-toggle="tab" href="#profile">პროფილის განახლება</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-13px" data-toggle="tab" href="#password">პაროლის განახლება</a>
                </li>
            </ul>
            <div class="tab-content">
                <partial name="_ProfileEditpartial" />
                <partial name="_PasswordEditPartial" />
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")

    @if (ViewBag.Success != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.success('@ViewBag.Success');
            });
        </script>
    }
    else if (ViewBag.Error != null)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error('@ViewBag.Error');
            });
        </script>
    }
}

