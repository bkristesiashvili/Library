@model UserEditViewModel
@using Microsoft.AspNetCore.Identity
@using Library.Data.Entities

@inject UserManager<User> UserManager

@{
    ViewBag.Title = "პროფილის რედაქტირება";

    var authUser = await UserManager.GetUserAsync(User);

}
<div class="jumbotron">
    <form method="post" asp-controller="account" asp-action="edit">
        <div class="form-group">
            <input asp-for="FirstName" class="form-control" value="@authUser.FirstName" />
            <span asp-validation-for="FirstName" class="text-danger text-12px text-left"></span>
        </div>
        <div class="form-group">
            <input asp-for="LastName" class="form-control" value="@authUser.LastName" />
            <span asp-validation-for="LastName" class="text-danger text-12px"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control pb-1" value="@authUser.Email" /><br />
            <span asp-validation-for="Email" class="text-danger text-12px"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmEmail" class="form-control" value="@authUser.Email" />
            <span asp-validation-for="ConfirmEmail" class="text-danger text-12px"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="პაროლი" />
            <span asp-validation-for="Password" class="text-danger text-12px"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="გაიმეორეთ პაროლი" />
            <span asp-validation-for="ConfirmPassword" class="text-danger text-12px"></span>
        </div>
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="font-size: 11px;"></div>
        </div>
        <div class="form-group text-right">
            <button type="submit" class="btn btn-sm btn-success text-12px">განახლება</button>
        </div>
    </form>
</div>

