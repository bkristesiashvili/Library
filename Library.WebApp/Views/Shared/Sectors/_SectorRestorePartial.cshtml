@model SectorListViewModel
<div>
    <div>
        <form onsubmit="return false;" method="post" data-restore-sector="@Model.Id" 
              asp-controller="@SectorIndexLink" 
              asp-action="restore" enctype="application/x-www-form-urlencoded">
            <input asp-for="Id" />
            <button type="button" onclick="sectorRestore('@Model.Id')" class="btn btn-sm text-11px text-success">
                <i class="fas fa-trash-restore"></i>
            </button>
        </form>
    </div>
</div>
