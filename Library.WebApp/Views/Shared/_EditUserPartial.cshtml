@model UserProfileEditViewModel

<div>
    <button type="button" class="btn btn-sm text-primary text-11px" data-toggle="modal" data-target="#editUser"><i class="fas fa-edit"></i></button>
</div>
<div class="modal fade" id="editUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">წიგნის დამატება</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form method="post">
                        <div class=" form-group">
                            <input asp-for="Id" />
                        </div>
                        <div class="form-group">
                            <input asp-for="FirstName" class="form-control text-13px" />
                            <span asp-validation-for="FirstName" class="text-danger text-11px"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LastName" class="form-control text-13px" />
                            <span asp-validation-for="LastName" class="text-danger text-11px"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control text-13px" />
                            <span asp-validation-for="Email" class="text-danger text-11px"></span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary text-12px" data-dismiss="modal">გაუქმება</button>
                <button type="button" class="btn btn-sm btn-success text-12px">დამახსოვრება</button>
            </div>
        </div>
    </div>
</div>