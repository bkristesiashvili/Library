@model SectionListViewModel
<div>
    <div>
        <form onsubmit="return false;" method="post" data-delete-section="@Model.Id" asp-controller="@SectionIndexLink" asp-action="delete" enctype="application/x-www-form-urlencoded">
            <input asp-for="Id" />
            <button type="button" onclick="sectionDelete('@Model.Id')" class="btn btn-sm text-11px text-danger">
                <i class="fas fa-trash"></i>
            </button>
        </form>
    </div>
</div>