@using Microsoft.AspNetCore.Identity
@using Library.Data.Entities

@inject UserManager<User> UserManager

@model UserProfileEditViewModel
@{
    var authUser = await UserManager.GetUserAsync(User);
}
<div id="profile" class="tab-pane active">
    <div class="jumbotron form">
        <form method="post" asp-controller="account" asp-action="editprofile">
            <div class="form-group">
                <input asp-for="FirstName" class="form-control text-13px" value="@authUser.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger text-12px text-left"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control text-13px" value="@authUser.LastName" />
                <span asp-validation-for="LastName" class="text-danger text-12px"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control text-13px" value="@authUser.Email" />
                <span asp-validation-for="Email" class="text-danger text-12px"></span>
            </div>
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger text-11px"></div>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="form-control btn btn-sm btn-success text-12px">განახლება</button>
            </div>
        </form>
    </div>
</div>
