<div>
    <button type="button" class="btn btn-sm btn-success text-12px" data-toggle="modal" data-target="#add_author"><i class="fas fa-plus">&nbsp;</i>დამატება</button>
</div>
<div class="modal fade" id="add_author" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="exampleModalLabel">ავტორის დამატება</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="create_author" asp-controller="authors" asp-action="add" class="text-12px">
                        <div class="form-group d-flex">
                            <input type="text" name="firstname" class="form-control text-14px" placeholder="სახელი" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="middlename" class="form-control text-14px" placeholder="მეორე სახელი" />
                        </div>
                        <div class="form-group d-flex">
                            <input type="text" name="lastname" class="form-control text-14px" placeholder="გვარი" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-secondary text-12px" data-dismiss="modal">გაუქმება</button>
                <button type="button" action-run="save" class="btn btn-sm btn-success text-12px">დამახსოვრება</button>
            </div>
        </div>
    </div>
</div>