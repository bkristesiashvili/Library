@model AuthorListViewModel
<div>
    <div>
        <form onsubmit="return false;" method="post" data-restore-author="@Model.Id"
              asp-controller="@AuthorIndexLink"
              asp-action="restore" enctype="application/x-www-form-urlencoded">
            <input asp-for="Id" />
            <button type="button" onclick="authorRestore('@Model.Id')" class="btn btn-sm text-11px text-success">
                <i class="fas fa-trash-restore"></i>
            </button>
        </form>
    </div>
</div>